#!/usr/bin/env bash
#script that configures a server to the above requirements
# Update package list and install Nginx if not already installed
apt-get update
apt-get install -y nginx

# Ensure Nginx is configured to listen on port 80
cat <<EOL > /etc/nginx/sites-available/default
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    location / {
        try_files \$uri \$uri/ =404;
    }
}
EOL

# Test Nginx configuration for syntax errors
nginx -t

# Restart Nginx to apply changes
systemctl restart nginx

# Ensure Nginx starts on boot
systemctl enable nginx

# Verify Nginx is listening on port 80
if ss -tuln | grep -q ':80 '; then
    echo "Nginx is running and listening on port 80"
else
    echo "Failed to start Nginx or not listening on port 80"
    exit 1
fi

ufw allow 80/tcp

if curl -I http://localhost | grep -q "200 OK"; then
    echo "Port 80 is accessible"
else
    echo "Port 80 is not accessible"
    exit 1
fi

echo "Nginx setup complete and listening on port 80"
